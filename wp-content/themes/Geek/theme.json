{   
    "$schema": "https://raw.githubusercontent.com/WordPress/gutenberg/trunk/schemas/json/theme.json",
    "version": 2,
    "settings": {
        "color": { 
            "defaultPalette": false,
            "defaultGradients": false,
            "palette": [
                {"slug": "g-brown-light", "color": "#D8A154","name": "Geek Wood color 1"},
                {"slug": "g-brown", "color": "#EAD","name": " Geek Wood color 2"},
                { "slug": "g-gray-100", "color": "rgb(243 244 246)", "name": "Geek Gray 100" },
                { "slug": "g-gray-200", "color": "rgb(229 231 235)", "name": "Geek Gray 200" },
                { "slug": "g-gray-300", "color": "rgb(209 213 219)", "name": "Geek Gray 300" },
                { "slug": "g-gray-400", "color": "rgb(156 163 175)", "name": "Geek Gray 400" },
                { "slug": "g-gray-500", "color": "rgb(107 114 128)", "name": "Geek Gray 500" },
                { "slug": "g-gray-600", "color": "rgb(75 85 99)", "name": "Geek Gray 600" },
                { "slug": "g-gray-700", "color": "rgb(55 65 81)", "name": "Geek Gray 700" },
                { "slug": "g-gray-800", "color": "rgb(31 41 55)", "name": "Geek Gray 800" },
                { "slug": "g-gray-900", "color": "rgb(17 24 39)", "name": "Geek Gray 900" },
                { "slug": "g-primary", "color": "rgb(239 68 68)", "name": "Geek Primary" },
                { "slug": "g-accent", "color": "rgb(67 56 202)", "name": "Geek Accent" },
                { "slug": "g-success", "color": "rgb(52 211 153)", "name": "Geek Success" },
                { "slug": "g-info", "color": "rgb(96 165 250)", "name": "Geek Info" },
                { "slug": "g-warning", "color": "rgb(251 146 60)", "name": "Geek Warning" },
                { "slug": "g-danger", "color": "rgb(236 72 153)", "name": "Geek Danger" }
            ],
            "gradients": [
                {
                    "slug": "g-dogs-nuance",
                    "name": "Dogs Nuance",
                    "gradient": "linear-gradient(45deg,#2Fa, #eee)"
                }
            ],
            "text": true,
            "link": true,
            "duotone": [
                { "slug": "g-filter","name": "Geek filter 1", "colors":["#2Fa", "#aea"]  }
            ],
            "customDuotone": false

            
             
        },
        
        "blocks": {
            "core/site-title": {
                "color": {
                    "defaultPalette": true,
                    "defaultGradients": false,
                    "customGradient": false,
                    "palette": [
                        { "slug": "g-primary", "color": "rgb(0 29 258)", "name": "Geek Primary" }
                    ],
                    "link": true,
                    "custom": false,
                    "gradients": []
                    
                },
                "typography": {
                    "fontFamilies": [
                        {
                            "slug": "g-rubik",
                            "fontFamily": "Rubik, Sans-serif",
                            "name": "Geek Rubik"
                        }
                    ]
                    
        
                }
                
            },
            "core/cover": {
                "color": {
                    "duotone": []
                }
            },
            "core/preformatted": {
                "typography": {
                    "fontSizes": [],
                    "customFontSize": false
                }
            }
        },

        "border": {
            "style": true,
            "width": true,
            "radius": true,
            "color": true
        },
        "typography": {
            "fontFamilies": [
                {
                    "slug": "g-pacifio",
                    "fontFamily": "Pacifio, Sans-serif",
                    "name": "Geek Pacifio"
                    
                }
                
            ],
            "fontSizes": [
                  {"slug": "small", "size": "0.75rem", "name": "Small "},
                  {"slug": "medium", "size": "1.25rem", "name": "Medium "},
                  {"slug": "large", "size": "2.25rem", "name": "Large "},
                  {"slug": "x-large", "size": "3rem", "name": "X-large "},
                  {"slug": "gigantic", "size": "3.75rem", "name": "Gigantic "}
                  
                  
            ]
            

        },
        "spacing": {
            "margin": true,
            "padding": true,
            "customSpacingSize": true
        }
            
    },
    "styles": {
        "color": {
            "text": "var(--wp--preset--color--g-gray-700)"
        },
        "elements": {
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--g-brown-light)"
                }
             }
            
        },
        "blocks": {
            "core/button": {
                "color": {
                    "gradient": "var(--wp--preset--color--g-dogs-nuance)"
                    
                }

            },
            "core/pullquote": {
                "border": {
                    "width": "4px",
                    "color": "var(--wp--preset--color--g-brown)",
                    "style": "dashed",
                    "radius":"30px"
                }
            }
           
        },
        "spacing": {
            "margin": {
                "top": "0",
                "bottom": "0",
                "left": "0",
                "right": "0"

            },
            "padding": {
                "top": "0",
                "bottom": "0",
                "left": "0",
                "right": "0"

            }
        }   
    }
}
